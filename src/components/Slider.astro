---
const technologies = [
  "astro",
  "react",
  "typeScript",
  "tailwindcss",
  "nodejs",
  "HTML5",
  "CSS3",
  "javaScript",
  "git",
  "supabase",
  "mysql",
  "bash",
];
---
<div class="relative overflow-x-hidden py-4 sm:py-6 md:py-8">
  <!-- Gradient Overlays -->
  <div
    class="pointer-events-none absolute inset-y-0 left-0 w-16 sm:w-24 md:w-32 bg-gradient-to-r from-[var(--background)] to-transparent z-20"
  >
  </div>
  <div
    class="pointer-events-none absolute inset-y-0 right-0 w-16 sm:w-24 md:w-32 bg-gradient-to-l from-[var(--background)] to-transparent z-20"
  >
  </div>

  <!-- Scrolling Content -->
  <div class="flex animate-scroll hover:animate-paused gap-6 sm:gap-8 md:gap-12 lg:gap-20 w-max">
    {
      [...technologies, ...technologies, ...technologies].map((tech: any) => (
        <div class="flex items-center gap-1.5 sm:gap-2 group transition-all duration-300">
          <img
            src={`/svg/${tech}.svg`}
            alt={tech}
            class="h-8 sm:h-10 md:h-12 w-auto object-contain transition-transform group-hover:scale-110"
            width="200"
            height="200"
            loading="lazy"
          />
          <span class="text-base sm:text-xl md:text-2xl font-medium text-[var(--white-icon)] hidden sm:inline">
            {tech.charAt(0).toUpperCase() + tech.slice(1)}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 50s linear infinite;
  }

  /* Responsive animation speeds */
  @media (min-width: 640px) {
    .animate-scroll {
      animation-duration: 75s;
    }
  }

  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 100s;
    }
  }

  /* Optional: Pause animation on hover for larger screens only */
  @media (min-width: 768px) {
    .animate-scroll:hover {
      animation-play-state: paused;
    }
  }

  /* Optional: Reduce motion preference */
  @media (prefers-reduced-motion: reduce) {
    .animate-scroll {
      animation-duration: 150s;
    }
  }
</style>