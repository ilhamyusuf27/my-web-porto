---
import { Icon } from 'astro-icon/components'
import Slider from "./Slider.astro";
const roleList: string[] = [
  "Frontend Developer",
  "Web Developer",
  "Software Developer",
];
const stats = [
  { number: "2+", label: "Years Experience" },
  { number: "5+", label: "Projects Completed" },
];
---
<section class="mt-12 sm:mt-16 md:mt-40 mb-16 md:mb-24 relative">
  <div class="w-full max-w-5xl mx-auto px-4 sm:px-6 md:px-8">
    <!-- Animated role tags -->
    <div class="flex justify-center flex-wrap gap-2 sm:gap-3 mb-4 sm:mb-6">
      {
        roleList.map((role: string) => (
          <div class="px-3 sm:px-4 py-1.5 sm:py-2 shadow-lg shadow-black/5 backdrop-blur-xl border border-[#E4E7EC] bg-white/80 rounded-full text-xs sm:text-sm hover:scale-105 transition-transform duration-300 cursor-default">
            <div class="flex items-center gap-1.5 sm:gap-2">
              <div class="w-1.5 h-1.5 sm:w-2 sm:h-2 bg-purple-600 rounded-full animate-pulse"></div>
              {role}
            </div>
          </div>
        ))
      }
    </div>

    <!-- Hero text with typing animation -->
    <div class="animate-fade-in space-y-4 sm:space-y-6">
      <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl text-center font-bold bg-gradient-to-r from-[#333333] via-purple-600 to-pink-600 inline-block text-transparent bg-clip-text mb-4 sm:mb-6 animate-slide-up leading-tight">
        Hello! I am Ilham Yusuf Alghani,
        <span class="block mt-2">Frontend Developer Based in Indonesia</span>
      </h1>
      
      <p class="text-center text-base sm:text-lg text-gray-600 max-w-2xl mx-auto animate-fade-in delay-200 px-4">
        2+ Years of Experience as a Frontend Developer Designing Stunning Products
        and Transforming Ideas into Reality
      </p>
    </div>

    <!-- Stats section -->
    <div class="grid grid-cols-2 gap-3 sm:gap-4 md:gap-6 max-w-3xl mx-auto my-8 sm:my-10 md:my-12 px-4">
      {stats.map(stat => (
        <div class="text-center p-3 sm:p-4 rounded-lg bg-white/50 backdrop-blur-sm border border-[#E4E7EC] hover:scale-105 transition-transform duration-300">
          <div class="text-xl sm:text-2xl md:text-3xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 inline-block text-transparent bg-clip-text">
            {stat.number}
          </div>
          <div class="text-xs sm:text-sm text-gray-600 mt-1">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- CTA Button -->
    <div class="w-full flex items-center gap-4 justify-center mb-8 sm:mb-10 md:mb-12 px-4">
      <a
        href="https://linkedin.com/in/your-profile"
        class="relative inline-flex items-center gap-2 sm:gap-3 px-6 sm:px-8 md:px-10 py-3 sm:py-4 md:py-5 bg-black text-white rounded-full group hover:scale-105 transition-all duration-300"
        aria-label="LinkedIn Profile"
      >
        <Icon name="mdi:email" class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 animate-bounce" />
        <span class="font-semibold text-sm sm:text-base md:text-lg whitespace-nowrap">Drop me a message</span>
        <div class="absolute inset-0 rounded-full border border-purple-600/50 glow"></div>
        <div class="absolute inset-px rounded-full border border-purple-600 blur-sm"></div>
      </a>
    </div>

    <!-- Tech stack slider -->
    <div class="px-4">
      <Slider />
    </div>
  </div>
</section>

<style>
  @keyframes slide-up {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  .animate-slide-up {
    animation: slide-up 0.6s ease forwards;
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  /* Responsive text gradient */
  @media (max-width: 640px) {
    .bg-gradient-to-r {
      background-size: 200% auto;
    }
  }

  /* Optional: Adjust glow effect for mobile */
  @media (max-width: 640px) {
    .glow {
      opacity: 0.5;
    }
  }
</style>